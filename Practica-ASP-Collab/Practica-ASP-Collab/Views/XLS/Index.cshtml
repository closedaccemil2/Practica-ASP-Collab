@model System.Data.DataTable
@using System.Data;

@{
    ViewBag.Title = "Subir archivo XLS";
}

<h2>Subir archivo XLS</h2>

@using (Html.BeginForm("Index", "XLS", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <input type="file" name="xls" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
    <input type="submit" value="Enviar" /> <br />


    if (Model != null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    @foreach (DataColumn col in Model.Columns)
                    {
                        <th>@col.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (DataColumn col in Model.Columns)
                        {
                            <td>@row[col.ColumnName]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    
}

}

